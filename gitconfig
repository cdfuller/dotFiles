# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Cody Fuller
	email = git@codyfuller.com
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.gitignore_global
[alias]
	a = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
	b = branch --all --verbose --verbose --sort=-authordate
	c = commit -m
	co = checkout
	d = diff --word-diff
	f= fetch -v
	g= grep --context 3 --line-number --heading --break --exclude-standard --untracked
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	unstage = reset HEAD --
[push]
	default = simple
[init]
	# templatedir = ~/.git-templates
[diff]
	tool = meld
[color "diff"]
	meta = yellow
	frag = blue bold reverse
	old = red
	new = green
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
